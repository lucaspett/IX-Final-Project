<h1>Listing Jobs</h1>

<%= link_to 'Create New Job Request', new_job_path %> | <%= link_to 'Home', root_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Qualifications</th>
    <th>Pay (R)</th>
    <th>Contact</th>
    <th>Date Published</th>
  </tr>
 
  <% @jobs.each do |job| %>
    <tr>
      <td><%= job.title %></td>
      <td><%= job.description %></td>
      <td><%= job.qualifications %></td>
      <td><%= job.pay%></td>
      <td><%= job.contact%></td>
      <td><%= job.date_published%></td>
      <td><%= link_to 'Show', job_path(job) %></td>
      <td><%= link_to 'Edit', edit_job_path(job) %></td>
      <td><%= link_to 'Destroy', job_path(job),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>


