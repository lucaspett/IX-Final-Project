<div class="applications">
	<p>
	  <strong>Name</strong><br>
	  <%= application.name %>
	</p>
	
	<p>
	  <strong>Contact</strong><br>
	  <%= application.contact %>
	</p>
	
	<p>
	  <strong>City/Town</strong><br>
	  <%= application.address %>
	</p>
	
	<p>
	  <strong>List Relevant Skills</strong><br>
	  <%= application.skills %>
	</p>
	
	<p>
	  <strong>List Past Experiences</strong><br>
	  <%= application.past_experiences %>
	</p>
	 
	<p>
	  <strong>Why Does This Job Interest You?</strong><br>
	  <%= application.summary %>
	</p>
</div>
<p>
  <%= link_to 'Remove Application', [application.job, application],
               method: :delete,
               data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</p>
<hr><br>